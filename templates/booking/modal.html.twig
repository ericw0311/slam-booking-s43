<!-- Booking out of period alert -->
<div id="boopAlert" class="w3-modal w3-animate-opacity">
	<div class="w3-modal-content">
		<header class="w3-container w3-red"> 
			<span onclick="document.getElementById('boopAlert').style.display='none'" class="w3-button w3-large w3-display-topright">&times;</span>
			<h3>{{ 'booking.period'|trans }}</h3>
		</header>
		<div class="w3-container w3-bottombar w3-border-red">
{% if bookingPeriod.before and bookingPeriod.after %}
			<p>{{ 'booking.out.of.period.from.until'|trans({'%firstBookingDate%': dateLongue(bookingPeriod.firstAllowedBookingDate), '%lastBookingDate%': dateLongue(bookingPeriod.lastAllowedBookingDate)}) }}</p>
{% elseif bookingPeriod.before %}
			<p>{{ 'booking.out.of.period.from'|trans({'%firstBookingDate%': dateLongue(bookingPeriod.firstAllowedBookingDate)}) }}</p>
{% elseif bookingPeriod.after %}
			<p>{{ 'booking.out.of.period.until'|trans({'%lastBookingDate%': dateLongue(bookingPeriod.lastAllowedBookingDate)}) }}</p>
{% else %}
			<p>{{ 'booking.period'|trans }}</p>
{% endif %}
		</div>
	</div>
</div>

