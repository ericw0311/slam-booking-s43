{# templates/planification/view.add.html.twig #}

{% extends 'base.half.html.twig' %}

{% block documentation %}
<a href="{{ path('documentation', { 'pageCode': 'PLANIFICATION' }) }}" target="_blank" class="w3-bar-item w3-button"><img src="{{ asset('images/help-16.png') }}">&nbsp;{{ 'help'|trans }}</a>
{% endblock %}

{% block content %}

<div class="w3-panel w3-border-bottom w3-text-indigo">
<h4><img src="{{ asset('images/planification-32.png') }}"></img>&nbsp;{{ planification.name }}</h4>
</div>

{% if userFileGroups|length > 0 %}

<div class="w3-panel w3-orange w3-round-large">
	<p><b>{{ 'view.select'|trans }}</b></p>
</div>

<div class="w3-bar-block">
{% set lineNumber = 0 %}
{% for userFileGroup in userFileGroups %}
{% set lineNumber = lineNumber + 1 %}
{% set lineColor = (lineNumber is odd) ? 'sand' : 'transparent' %}
	<a href="{{ path('planification_view_add_validate', { 'planificationID': planification.id, 'planificationPeriodID': planificationPeriod.id, 'userFileGroupID': userFileGroup.id }) }}" class="w3-bar-item w3-button w3-{{ lineColor }} w3-round-large"><img src="{{ asset('images/user-group-32.png') }}">&nbsp;{{ userFileGroup.name }}</a>
{% endfor %}
</div>

{% else %}

<div class="w3-panel w3-pale-red w3-round-large">
	<p>{{ 'view.no.group.to.add'|trans }}</p>
</div>

{% endif %}

<div class="w3-show-inline-block w3-margin-top">
<div class="w3-bar w3-border w3-round">
	<a href="{{ path('planification_view_first', { 'planificationID': planification.id, 'planificationPeriodID': planificationPeriod.id }) }}" class="w3-bar-item w3-button w3-light-gray"><i class="fa fa-times"></i>&nbsp;{{ 'cancel'|trans }}</a>
</div>
</div>

{% endblock %}
